<h1>Logged-in as <%= current_user.email %></h1>


<!-- Photos are not lining up -->
<div>
  <% if current_user.profile.nil? %>
  <% else %>
    Verified: <%= current_user.profile.verified %><br />
    Name: <%= current_user.profile.firstname %> <%= current_user.profile.lastname %><br />
    Prescription ID: <% if current_user.profile.prescription_card.present?%>
                    <span><%= image_tag current_user.profile.prescription_card.url %></span><br />
                    <% else %>
                      None. Please update your profile<br/>
                    <% end %>
    Valid ID Card:  <% if current_user.profile.idcard.present? %>
                      <span><%= image_tag current_user.profile.idcard.url %></span><br />
                    <% else %>
                      None. Please update your profile<br/>
                    <% end %>
  <% end %>
</div>

<% if current_user.profile.nil? %>
  <%= link_to 'Create Profile', new_user_profile_path(current_user), class: "btn btn-default" %>	
<% else %>
  <%= link_to 'Edit Profile', edit_user_profile_path(current_user), class: "btn btn-default" %>
<% end %>

